<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <Button
        android:id="@+id/btn9"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="43dp"
        android:text="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="43dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="43dp"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv" />

    <Button
        android:id="@+id/btndivision"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="/"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnmul"
        app:layout_constraintTop_toBottomOf="@+id/btnminus" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:text="x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btndivision"
        app:layout_constraintStart_toEndOf="@+id/btnequal"
        app:layout_constraintTop_toBottomOf="@+id/btnplus" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:text="="
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnmul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn0" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnplus"
        app:layout_constraintTop_toBottomOf="@+id/btn3" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/btnminus"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn2" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/btnplus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn6" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn5" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="7dp"
        android:text="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn9" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="7dp"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn8" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="101dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="7dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="370dp"
        android:layout_height="145dp"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="13dp"
        android:text="Calculator"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>